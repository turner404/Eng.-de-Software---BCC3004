class NotificationService:
    def __init__(self, notification_sender):
        self.notification_sender = notification_sender

    def send_notification(self, recipient, message):
        self.notification_sender.send_message(recipient, message)

class EmailSender:
    def send_message(self, recipient, message):
        print(f"Sending email to {recipient}: {message}")

class SMSSender:
    def send_message(self, recipient, message):
        print(f"Sending SMS to {recipient}: {message}")

# Exemplo de uso
email_sender = EmailSender()
sms_sender = SMSSender()

email_notification = NotificationService(email_sender)
sms_notification = NotificationService(sms_sender)

email_notification.send_notification("alice@example.com", "Hello, Alice!")
sms_notification.send_notification("Bob", "Hi, Bob!")
